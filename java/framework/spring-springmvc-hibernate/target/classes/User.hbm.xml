<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.test.entity.User" table="user">
        <id name="id" column="id" type="java.lang.String">
            <generator class="native"></generator>
        </id>
        <property name="name" column="name" type="java.lang.String" />
        <property name="sex" column="sex" type="java.lang.String" />
        <property name="birthday" column="birthday" type="java.util.Date" />
        <property name="address" column="address" type="java.lang.String" />
        <property name="comment" column="comment" type="java.lang.String" />
    </class>
</hibernate-mapping>